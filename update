#!/bin/bash
set -e

. config

cd libuv
git fetch --tags
git reset --hard
git checkout -- *
git checkout $LIBUV_BRANCH
git pull || true
git rebase || true
cd ..

cd coreclr
git fetch --tags
git reset --hard
git checkout -- *
git checkout $CORECLR_BRANCH
git pull || true
git rebase || true
cd ..

cd corefx
git fetch --tags
git reset --hard
git checkout -- *
git checkout $COREFX_BRANCH
git pull || true
git rebase || true
cd ..

cd roslyn
git fetch --tags
git reset --hard
git checkout -- *
git checkout $ROSLYN_BRANCH
git pull || true
git rebase || true
cd ..

cd core-setup
git fetch --tags
git reset --hard
git checkout -- *
git checkout $COREHOST_BRANCH
git pull || true
git rebase || true
cd ..

cd sdk
git fetch --tags
git reset --hard
git checkout -- *
git checkout $SDK_BRANCH
git pull || true
git rebase || true
cd ..

cd cli
git fetch --tags
git reset --hard
git checkout -- *
git checkout $CLI_BRANCH
git pull || true
git rebase || true
cd ..
